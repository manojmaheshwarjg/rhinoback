                      ) : (
                        <div className="text-center py-8">
                          <p className="text-sm text-gray-500">No infrastructure code generated yet</p>
                          <Button variant="outline" size="sm" className="mt-3" onClick={() => retryGenerate('iac')}>
                            Generate IaC
